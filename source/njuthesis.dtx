% \begin{macro}{\@@_header:nn,\@@_footer:nn}
% 对 \pkg{fancyhdr} 的命令进行包装，便于设置页眉页脚。
%    \begin{macrocode}
\cs_new_protected:Npn \@@_header:nn #1#2
  { \fancyhead [#1] { \l_@@_fmt_header_tl \nouppercase {#2} } }
\cs_new_protected:Npn \@@_footer:nn #1#2
